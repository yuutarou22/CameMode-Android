<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="4dp"
	app:cardElevation="0dp"
	app:cardBackgroundColor="@color/colorFragmentBackground">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_marginVertical="5dp">
		
		<TextView
			android:id="@+id/sex_title"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:fontFamily="@font/smart_font"
			android:gravity="center"
			android:text="@string/sex_title"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		
		<TextView
			android:id="@+id/sex"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginVertical="5dp"
			android:layout_marginHorizontal="8dp"
			android:fontFamily="@font/smart_font"
			android:gravity="center"
			android:text="性別"
			android:textColor="@color/colorContrast"
			android:textSize="20sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/sex_title" />
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>