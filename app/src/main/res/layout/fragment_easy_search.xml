<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment.Search.EasySearchFragment">

    <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/radio_group"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner_region" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:background="#FF00FF"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            <RadioButton
                    android:layout_gravity="center"
                    android:id="@+id/radio_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    style="@style/simple_search_radio_button_camera"/>
            <TextView
                    android:layout_gravity="center"
                    android:text="@string/search_simple_radio_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:background="#FFFF00"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
            <RadioButton
                    android:layout_gravity="center"
                    android:id="@+id/radio_model"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    style="@style/simple_search_radio_button_model"/>
            <TextView
                    android:layout_gravity="center"
                    android:text="@string/search_simple_radio_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RadioGroup>

    <Spinner
            android:id="@+id/spinner_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:entries="@array/region_item_add"
            android:spinnerMode="dialog"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginBottom="120dp"
            app:layout_constraintBottom_toTopOf="@+id/search_simple_button_execute"/>

    <ImageButton
            android:id="@+id/search_simple_button_execute"
            android:src="@drawable/ic_simple_search_radio_button_camera_nonactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>