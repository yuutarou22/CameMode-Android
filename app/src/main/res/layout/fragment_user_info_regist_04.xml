<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.UserInfoRegist.UserInfoRegistFragment04">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/userinfo_regist_layout_margin_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/photo_image_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="撮影イメージ"
            android:textColor="@color/colorTitleUserInfoRegist"
            android:textSize="@dimen/userinfo_regist_title_text_size" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nest"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/photo_image_label"
            tools:layout_editor_absoluteX="-8dp">

            <EditText
                android:id="@+id/photo_image_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorEditTextBackground" />
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/photo_image_text_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0/200" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>