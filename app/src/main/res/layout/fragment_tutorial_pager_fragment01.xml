<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorWhite"
	tools:context=".Fragment.Tutorial.TutorialPagerFragment01">
	
	<LinearLayout
		android:id="@+id/top_images"
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:layout_marginTop="100dp"
		android:orientation="vertical"
		android:gravity="center"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">
		<ImageView
			android:id="@+id/imageView"
			android:layout_width="match_parent"
			android:layout_height="180dp"
			android:src="@drawable/tutorial_pager_img_1" />
		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/smart_font"
			android:text="@string/app_name"
			android:textSize="35sp" />
	</LinearLayout>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:fontFamily="@font/smart_font"
		android:paddingHorizontal="20dp"
		android:text="@string/tutorial_pager_1"
		android:textColor="@color/colorText"
		android:textSize="18sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/top_images" />

</androidx.constraintlayout.widget.ConstraintLayout>